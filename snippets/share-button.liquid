{%- style -%}
      .share-social-container {
          display: flex;
          gap: 10px;
      }

      .share-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 20%;
        background-color: #fff;
        transition: background-color 0.3s;
        border:1px solid #e2e2e2;
      }

      .share-btn a {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 100%;
          height: 100%;
          text-decoration: none;
      }

      .share-btn:hover {
          background-color: #e0e0e0;
      }

      .share-btn svg {
          width: 24px;
          height: 24px;
      }
{%- endstyle -%}

