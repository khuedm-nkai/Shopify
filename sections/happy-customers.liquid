{{ 'happy-customers.css' | asset_url | stylesheet_tag }}

<div>
  <div class="customer-container">
    <div class="customer-header">
      <h3 class="custom-header">{{ section.settings.customer_title }}</h3>
      <span class="customer-description">{{ section.settings.customer_description }}</span>
      <a href="{{ section.settings.happy_customers_url}}" class="customer-link">{{ section.settings.customer_link }}</a>
    </div>
    <div class="customer-grid">
      <img
        class="customer-img"
        width="100%"
        height="350px"
        src="{{ section.settings.image1 | image_url }}"
        alt="customer 1"
        loading="lazy"
      >
      <img
        class="customer-img"
        width="100%"
        height="350px"
        src="{{ section.settings.image2 | image_url }}"
        alt="customer 2"
        loading="lazy"
      >
      <img
        class="customer-img"
        width="100%"
        height="350px"
        src="{{ section.settings.image3 | image_url }}"
