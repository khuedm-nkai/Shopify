        loading="lazy"
      >
      <img
        class="customer-img"
        width="100%"
        height="350px"
        src="{{ section.settings.image5 | image_url }}"
        alt="customer 5"
        loading="lazy"
      >
      <img
        class="customer-img"
        width="100%"
        height="350px"
        src="{{ section.settings.image6 | image_url }}"
        alt="customer 6"
        loading="lazy"
      >
      <img
        class="customer-img"
        width="100%"
        height="350px"
        src="{{ section.settings.image7 | image_url }}"
        alt="customer 7"
        loading="lazy"
      >
      <img
        class="customer-img"
        width="100%"
        height="350px"
        src="{{ section.settings.image8 | image_url }}"
        alt="customer 8"
        loading="lazy"
      >
    </div>
  </div>
</div>

{% schema %}
{
    "name": "Happy customer",
    "settings": [
        {
            "type": "text",
            "id": "customer_title",
            "label": "Title",
            "default": "LET CUSTOMERS SPEAK FOR US"
        },
        {
            "type": "text",
            "id": "customer_description",
            "label": "description",
            "default": "Your happiness is our top priority for each and every gift we deliver!"
        },
        {
            "type": "text",
            "id": "customer_link",
            "label": "link",
            "default": "VISIT HAPPY CUSTOMERS"
        },
        {
            "type": "image_picker",
            "id": "image1",
