<div class="banner_page">
    <img 
      width="100"
      height="100"
      src="{{ section.settings.image1 | image_url }}" alt="Banner Image"
      loading="lazy"
    >
</div>

{% schema %}
{
    "name": "Banner Page",
    "settings": [
        {
            "type": "image_picker",
            "id": "image1",
            "label": "Image1"
        }
    ],
    "presets": [
        {
            "name": "Banner Page"
        }
    ]
}
{% endschema %}

{% style %}
    .banner_page {
        max-width: 1100px;
        margin: 20px auto;
        overflow: hidden;
        border-radius: 20px;
    }
    .banner_page img {
        display: block;
        width: 100%;
        height: auto;
        border-radius: 20px;
        padding: 0 10px;
    }
{% endstyle %}
