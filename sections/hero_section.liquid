<div>
  <div class="hero-container">
    <div class="hero-column-container">
      <h2 id="SectionHeading-template--16128313294902__collection_list_Cci7X4" class="collection-list-title inline-richtext h1 scroll-trigger animate--slide-in">
           {{ section.settings.heading }}
      </h2>
        <img
          class='hero-image'
          width="100%"
          height="300px"
          src="{{ section.settings.image | image_url }}"
          alt="{{ section.settings.heading }}"
        >
    </div>
  </div>
</div>

{% schema %}
{
    "name": "Hero section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "WHO IS THE HERO?"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }
    ],
    "presets": [
        {
            "name": "Hero section"
        }
    ]
}
{% endschema %}

{% stylesheet %}
  .hero-container {
      width: 100%;
      display: flex;
      justify-content: center;
  }

  .test-hero {
        width: 100%;
      display: flex;
      justify-content: center;
  }

  .hero-column-container {
      display: flex;
      flex-direction: column;
      max-width: 1200px;
      padding-left: 10px;
      padding-right: 10px;
      align-items: center;
  }

  .hero-title {
      font-size: 4rem;
      font-weight: 600;
      margin-top: 10px;
  }

  .hero-image {
      width: 100%;
      border-radius: 10px;
      margin-top: 20px;
      object-fit: cover;
  }

  @media (max-width: 640px) {
      .hero-image {
          height: 258px;
      }
  }
{% endstylesheet %}
