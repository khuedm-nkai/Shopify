<script>
  const options1 = [
    { value: "For Family", text: "Family" },
    { value: "For Dad", text: "Dad" },
    { value: "For Mom", text: "Mom" },
    { value: "For Grandma", text: "Grandma" },
    { value: "For Grandpa", text: "Grandpa" },
    { value: "For Dog Lover", text: "Dog Lover" },
    { value: "For Cat Lover", text: "Cat Lover" },
    { value: "For Couple", text: "Couple" },
    { value: "For Besties", text: "Besties" }
  ];

  const options2 = [
    { value: "Summer Collection", text: "Summer" },
    { value: "Father's Day", text: "Father's Day" },
    { value: "Mother's Day", text: "Mother's Day" },
    { value: "Anniversary", text: "Anniversary" },
    { value: "Memorial GÃ¬ts", text: "Memorial" }
  ];

  function populateSelectBox(selectBoxId, options) {
    const selectBox = document.getElementById(selectBoxId);
    options.forEach(option => {
      const opt = document.createElement('option');
      opt.value = option.value;
      opt.textContent = option.text;
      selectBox.appendChild(opt);
    });
  }

  populateSelectBox("selectbox1", options1);
  populateSelectBox("selectbox2", options2);

  function redirectToPage() {
    var selectbox1 = document.getElementById("selectbox1").value;
    var selectbox2 = document.getElementById("selectbox2").value;

    var url = "https://duconspace.com/collections/all?page=1&rb_snize_facet1=" + encodeURIComponent(selectbox2) + "&rb_snize_facet2=" + encodeURIComponent(selectbox1);

    window.location.href = url;
  }
</script>

