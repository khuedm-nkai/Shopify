<script>
    function formatPrice(price) {
        let formattedPrice = (price / 100).toFixed(2);
        formattedPrice = formattedPrice.replace('.', ',');
        if (formattedPrice.endsWith('0')) {
            formattedPrice = formattedPrice.slice(0, -1);
        }
        if (formattedPrice.endsWith(',')) {
            formattedPrice += '0';
        }
        return formattedPrice + ' USD';
    }

    const priceElements = document.querySelectorAll('.convert-price');

    priceElements.forEach((element) => {
        const price = element.getAttribute('data-price');
        element.textContent = formatPrice(price);
    });
</script>
